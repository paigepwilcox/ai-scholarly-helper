{
    "name": "AI Scholarly Helper",
    "description": "base level extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "logged-out.html",
        "default_icon": "eye_icon.png"
    },
    "icons": {
        "16": "eye_icon.png",
        "48": "eye_icon.png",
        "128": "eye_icon.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": ["https://pubmed.ncbi.nlm.nih.gov/*"],
    "content_scripts": [
        {
            "matches": ["https://pubmed.ncbi.nlm.nih.gov/*"],
            "js": ["scripts/pubmed-content.js"],
            "css": ["app.css"]
        }
    ]
}